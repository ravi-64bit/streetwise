<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Dashboard - ' }) %>
  <body>
    <%- include('partials/header') %>

    <main class="container my-4">
      <!-- Top toolbar -->
      <div class="dashboard-toolbar d-flex justify-content-between align-items-center mb-4">
        <div class="vendor-meta">
          <h2 class="mb-1">Welcome, <%= vendor.name %></h2>
          <p class="text-muted mb-0">Address: <%= vendor.address || 'N/A' %></p>
        </div>

        <div class="toolbar-actions d-flex gap-2">
          <button id="viewMenuBtn" class="btn btn-outline-primary">View Menu</button>
          <form action="/logout" method="POST" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
          </form>
        </div>
      </div>

      <!-- Orders Section -->
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Incoming Orders</h4>
      </div>

      <div id="ordersContainer" class="plates-grid">
        <% orders.forEach(order => { %>
          <div class="plate-card card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4 class="mb-0">üßæ <%= order.orderCode %></h4>
              <form method="POST" action="/api/orders/<%= order._id %>?_method=DELETE">
                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Order">‚ùå</button>
              </form>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush plate-items-list mb-3">
                <% order.items.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= item.itemName %> x <%= item.quantity %></span>
                    <strong>‚Çπ<%= item.price * item.quantity %></strong>
                  </li>
                <% }) %>
              </ul>
              <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-sm btn-primary add-item-btn" data-order-id="<%= order._id %>">Add Item</button>
                <div><strong>Total:</strong> ‚Çπ<%= order.total %></div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Add Item Modal -->
      <div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <form id="addItemForm" class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addItemModalLabel">Add Item to Order</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="menuItemSelect" class="form-label">Select Item</label>
                <select id="menuItemSelect" class="form-select" required></select>
              </div>
              <div id="selectedItemPrice" class="mb-2 text-muted"></div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Add Item</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <!-- Server data -->
    <script type="application/json" id="menuItemsData"><%- JSON.stringify(menuItems) %></script>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
